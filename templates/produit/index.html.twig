{% extends 'base.html.twig' %}

{% block title %}Nos produis  laboutiquefrançaise {% endblock %}

{% block content %}
<h1>Tous nos produits </h1>
<div class="row">
    {% for product in produits %}
    <div class="col-md-4">
        <div class="produit_item text-center">
            <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}img-fluid ">
            <h5>{{ product.name }}</h4>
            <span class="produit-subtitle">{{ product.subtitle }}</span><br/>
            <span class="produit-prix">Prix: {{ (product.prix /100)|number_format(2,',','.')}} €</span>
        </div>
    </div>
    
    {% endfor %}
    
</div>
{% endblock %}
